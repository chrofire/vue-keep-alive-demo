{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "compilerOptions": {
        // 增量编译
        "composite": true,
        "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        },
        "strict": true,
        "noImplicitAny": false
    },
    "include": [
        "types/**/*",
        "src/**/*",
        "src/**/*.vue"
    ]
}
